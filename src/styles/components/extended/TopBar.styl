@import '../../variables/loader';

.topbar-component-container
    overflow: hidden;
    background-color: $default-primary-color;
    box-shadow: 0 2px 6px rgba(0,0,0,.2)
    border-top: solid 5px $dark-primary-color
    position: fixed;
    top: 0;
    right: 0;
    width: 100%; 
    height: 60px; 
    display:flex
	.topbar-component
		.left
			float: left;
			display: block;
			color: $text-primary-color
			text-align: center;
			padding: 14px 16px;
			text-decoration: none;
		.right
			position: absolute
			right: 0px
			float: right
			display: flex
			color: $text-primary-color
			text-align: center
			padding: 14px 16px
			text-decoration: none
			.button-component-container
				.btn
					position: fixed
					right: 100px
					top: 20px
		



		
			