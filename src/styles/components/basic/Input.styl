.input-component-container
  width: 100%
  .input-component
    position: relative;
    display: flex;
    flex-direction: row;
    max-width: 400px;
    margin: 0 auto;
    border-radius: 2px;
    padding: 1.4rem 2rem 1.6rem;
    background: $input-background;
    input
      flex-grow: 1;
      color: $input-text-active;
      font-size: 1.8rem;
      line-height: 2.4rem;
      vertical-align: middle;
    